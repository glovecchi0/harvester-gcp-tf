## -- Prefix added to names of all resources
prefix = "gcp-tf"

## -- Google Project ID that will contain all created resources
project_id = "gcp-tf"

## -- Google region used for all resources
region = "us-west2"
# Valid regions: asia-east1, asia-east2, asia-northeast1, asia-northeast2, asia-northeast3, asia-south1, asia-south2, asia-southeast1, asia-southeast2, australia-southeast1, australia-southeast2, europe-central2, europe-north1, europe-southwest1, europe-west1, europe-west10, europe-west12, europe-west2, europe-west3, europe-west4, europe-west6, europe-west8, europe-west9, me-central1, me-central2, me-west1, northamerica-northeast1, northamerica-northeast2, southamerica-east1, southamerica-west1, us-central1, us-east1, us-east4, us-east5, us-south1, us-west1, us-west2, us-west3, us-west4

## -- Specify if a new SSH key pair needs to be created for the instances
create_ssh_key_pair = true

## -- The full path where is present the pre-generated SSH PRIVATE key (not generated by Terraform); if "create_ssh_key_pair = false" this variable must be set
ssh_private_key_path = null

## -- The full path where is present the pre-generated SSH PUBLIC key (not generated by Terraform); if "create_ssh_key_pair = false" this variable must be set
ssh_public_key_path = null

## -- Range of private IPs available for the Google Subnet
ip_cidr_range = "10.10.0.0/24"

## -- Specify whether VPC / Subnet should be created for the instances
create_vpc = true

## -- Google VPC used for all resources
vpc = null

## -- Google Subnet used for all resources
subnet = null

## -- Specify whether a firewall should be created for the resources
create_firewall = true

## -- The number of nodes to create
instance_count = 3

## -- Size of the disk attached to each node, specified in GB
instance_disk_size = 50

## -- Type of the disk attached to each node (e.g. 'pd-standard', 'pd-ssd' or 'pd-balanced')
disk_type = "pd-balanced"

## -- The name of a Google Compute Engine machine type
instance_type = "n2-standard-16"

## -- Operating system type (sles or ubuntu)
os_type = "ubuntu"

## -- Custom startup script to run when the VMs start
startup_script = null

## -- Waiting time in seconds
waiting_time = 180
